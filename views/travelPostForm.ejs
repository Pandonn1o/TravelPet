<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Create Travel Post</title>
  <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
  <link rel="stylesheet" href="https://unpkg.com/leaflet-control-geocoder/dist/Control.Geocoder.css" />
  <style>
    body {
      font-family: 'Segoe UI', Arial, sans-serif;
      background: #f7f9fc;
      margin: 0;
      padding: 0;
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .form-container {
      max-width: 500px;
      width: 100%;
      margin: auto;
      padding: 2rem 2rem 1.5rem 2rem;
      background: #fff;
      border-radius: 1rem;
      box-shadow: 0 6px 24px rgba(0,0,0,0.08);
    }
    h2 {
      color: #2563eb;
      text-align: center;
      margin-bottom: 1.5rem;
      font-weight: 700;
    }
    label {
      display: block;
      margin-bottom: 0.3rem;
      color: #475569;
      font-weight: 500;
      text-align: left;
    }
    input[type="text"], textarea {
      width: 100%;
      padding: 0.75rem;
      margin-bottom: 1rem;
      border: 1px solid #ccc;
      border-radius: 8px;
      font-size: 1rem;
      resize: vertical;
      box-sizing: border-box;
      background: #f1f5f9;
    }
    textarea {
      min-height: 80px;
    }
    #map {
      height: 300px;
      border-radius: 1rem;
      margin-bottom: 1rem;
    }
    button {
      background: linear-gradient(90deg, #2563eb 60%, #1d4ed8 100%);
      color: white;
      border: none;
      padding: 0.8rem 2rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1.1rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 1px;
      box-shadow: 0 2px 8px rgba(37,99,235,0.10);
      transition: background 0.2s, box-shadow 0.2s, transform 0.1s;
      display: block;
      margin: 1rem auto 0 auto;
    }
    button:hover {
      background: linear-gradient(90deg, #1d4ed8 60%, #2563eb 100%);
      box-shadow: 0 4px 16px rgba(37,99,235,0.18);
      transform: translateY(-2px) scale(1.03);
    }
    input[type="file"] {
      display: none;
    }

    .custom-file-label {
      display: inline-block;
      background: linear-gradient(90deg, #2563eb 60%, #1d4ed8 100%);
      color: #fff;
      padding: 0.7rem 1.5rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 1px;
      box-shadow: 0 2px 8px rgba(37,99,235,0.10);
      transition: background 0.2s, box-shadow 0.2s, transform 0.1s;
      margin-bottom: 1rem;
      margin-top: 0.5rem;
      text-align: center;
    }
    .custom-file-label:hover {
      background: linear-gradient(90deg, #1d4ed8 60%, #2563eb 100%);
      box-shadow: 0 4px 16px rgba(37,99,235,0.18);
      transform: translateY(-2px) scale(1.03);
    }
    #photoUploadName {
      display: block;
      margin-bottom: 1rem;
      color: #475569;
      font-size: 0.95rem;
      text-align: left;
      min-height: 1.2em;
    }
  </style>
</head>
<body>
  <div class="form-container">
    <h2>Create Travel Post</h2>
    <form action="/posts" method="POST" enctype="multipart/form-data">
      <label for="title">Title:</label>
      <input type="text" name="title" id="title" required />

      <label for="description">Description:</label>
      <textarea name="description" id="description" required></textarea>

      <label for="photo">Photo URL:</label>
      <input type="text" name="photo" id="photo" />

      <label for="photoUpload" class="custom-file-label">Upload Photo</label>
      <input type="file" name="photo" id="photoUpload" accept="image/*" />
      <span id="photoUploadName"></span>

      <label for="location">Location:</label>
      <input type="text" name="location" id="location" required placeholder="Click on the map or search" readonly />

      <input type="hidden" id="latitude" name="latitude" />
      <input type="hidden" id="longitude" name="longitude" />

      <div id="map"></div>

      <button type="submit">Create Post</button>
    </form>
  </div>

  <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
  <script src="https://unpkg.com/leaflet-control-geocoder/dist/Control.Geocoder.js"></script>
  <script>
    const map = L.map('map').setView([48.3794, 31.1656], 5);

    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      attribution: '&copy; OpenStreetMap contributors'
    }).addTo(map);

    let marker;

    // Add Geocoder search box
    const geocoder = L.Control.geocoder({
      defaultMarkGeocode: false
    })
    .on('markgeocode', function(e) {
      const latlng = e.geocode.center;
      const displayName = e.geocode.name;

      map.setView(latlng, 10);

      if (marker) map.removeLayer(marker);
      marker = L.marker(latlng).addTo(map).bindPopup(displayName).openPopup();

      document.getElementById('location').value = displayName;
      document.getElementById('latitude').value = latlng.lat;
      document.getElementById('longitude').value = latlng.lng;
    })
    .addTo(map);

    // Handle manual clicks on map
    map.on('click', async function(e) {
      const { lat, lng } = e.latlng;

      const res = await fetch(`https://nominatim.openstreetmap.org/reverse?lat=${lat}&lon=${lng}&format=json`);
      const data = await res.json();
      const displayName = data.display_name || `${lat}, ${lng}`;

      document.getElementById('location').value = displayName;
      document.getElementById('latitude').value = lat;
      document.getElementById('longitude').value = lng;

      if (marker) map.removeLayer(marker);
      marker = L.marker([lat, lng]).addTo(map).bindPopup(displayName).openPopup();
    });

    // Show selected file name for pretty file input
    document.getElementById('photoUpload').addEventListener('change', function(e) {
      const fileName = e.target.files[0] ? e.target.files[0].name : '';
      document.getElementById('photoUploadName').textContent = fileName;
    });
  </script>
</body>
</html>
