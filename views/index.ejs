<!DOCTYPE html>
<html>
  <head>
    <title>Travel Posts</title>
    <style>
      body {
        font-family: 'Segoe UI', Arial, sans-serif;
        background: #f7f9fc;
        margin: 0;
        padding: 0;
      }
      .main-content {
        max-width: 800px;
        margin: 60px auto;
        background: #fff;
        padding: 2rem;
        border-radius: 16px;
        box-shadow: 0 6px 24px rgba(0, 0, 0, 0.08);
      }
      h1 {
        color: #2563eb;
        font-size: 2rem;
        margin-bottom: 1.5rem;
        text-align: center;
      }
      .post {
        border-bottom: 1px solid #e2e8f0;
        padding: 1rem 0;
      }
      .post:last-child {
        border-bottom: none;
      }
      .post-title {
        font-size: 1.3rem;
        font-weight: 600;
        margin-bottom: 0.3rem;
        color: #1e293b;
      }
      .post-desc {
        color: #475569;
        margin-bottom: 0.5rem;
      }
      .post-location {
        font-style: italic;
        color: #64748b;
        margin-bottom: 0.5rem;
      }
      .edit-btn {
        display: inline-block;
        background: #2563eb;
        color: #fff;
        padding: 0.4rem 1rem;
        border-radius: 6px;
        border: none;
        font-size: 1rem;
        font-weight: 500;
        text-decoration: none;
        margin-right: 0.5rem;
        transition: background 0.2s;
        cursor: pointer;
      }
      .edit-btn:hover {
        background: #1d4ed8;
        color: #fff;
        text-decoration: none;
      }
      .delete-btn {
        display: inline-block;
        background: #e11d48;
        color: #fff;
        padding: 0.4rem 1rem;
        border-radius: 6px;
        border: none;
        font-size: 1rem;
        font-weight: 500;
        cursor: pointer;
        transition: background 0.2s;
      }
      .delete-btn:hover {
        background: #be123c;
        color: #fff;
      }
      .add-btn {
        display: block;
        width: fit-content;
        margin: 2rem auto 0 auto;
        background: #2563eb;
        color: #fff;
        padding: 0.6rem 1.3rem;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 500;
        font-size: 1rem;
        transition: background 0.2s;
      }
      .add-btn:hover {
        background: #1d4ed8;
      }
      .center-message {
        text-align: center;
        color: #64748b;
        margin: 2rem 0;
        font-size: 1.1rem;
      }
    </style>
  </head>
  <body>
    <%- include('partials/header') %>
    <div class="main-content">
      <h1>All Travel Posts ðŸ§³</h1>

      <% if (posts.length === 0) { %>
        <p class="center-message">No travel posts yet. Be the first to share your journey!</p>
      <% } %>

      <% posts.forEach(post => { %>
        <div class="post">
          <div class="post-title"><%= post.title %></div>
          <div class="post-desc"><%= post.description %></div>
          <% if (currentUser && post.owner._id.toString() === currentUser._id.toString()) { %>
            <a href="/posts/<%= post._id %>/edit" class="edit-btn">Edit</a>
            <form action="/posts/<%= post._id %>/delete" method="POST" style="display:inline;">
              <button type="submit" class="delete-btn" onclick="return confirm('Are you sure you want to delete this post?')">Delete</button>
            </form>
          <% } %>
        </div>
      <% }); %>

      <a href="/posts/new" class="add-btn">+ Add New Post</a>
    </div>
  </body>
</html>
